<!-- Beep Sound -->
<audio id="alertSound" src="https://actions.google.com/sounds/v1/alarms/alarm_clock.ogg" preload="auto"></audio>

<!-- Script -->
<script>
function playAlert(signalName = "Top Finder Signal Activated") {
  // üîî Play Beep
  const beep = document.getElementById("alertSound");
  if (beep) {
    beep.volume = 1.0;
    beep.currentTime = 0;
    beep.play().catch((err) => {
      console.warn("Beep blocked:", err);
    });
  }

  // üó£Ô∏è Speak the signal name
  const msg = new SpeechSynthesisUtterance(signalName);
  msg.lang = "en-IN";
  msg.volume = 1;
  msg.rate = 0.85;
  msg.pitch = 1;
  speechSynthesis.cancel(); // stop any ongoing speech
  speechSynthesis.speak(msg);
}
</script>
