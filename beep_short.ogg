<script>
  function playAlert(signalName = "New Signal") {
    // Speak the signal name using speech synthesis
    const msg = new SpeechSynthesisUtterance(`${signalName} activated`);
    msg.lang = "en-IN";
    msg.volume = 1; // max volume
    msg.rate = 0.9; // slightly slower for clarity
    msg.pitch = 1;

    // Optional: Select a specific voice (e.g., Indian English)
    const voices = speechSynthesis.getVoices();
    msg.voice = voices.find(voice => voice.name.includes("Google") || voice.lang === "en-IN");

    speechSynthesis.cancel(); // stop any current speech
    speechSynthesis.speak(msg);
  }
</script>

