<script>
  function playAlert(signalName = "") {
    const audio = document.getElementById("alertSound");
    if (audio) {
      audio.currentTime = 0;
      const playPromise = audio.play();
      if (playPromise !== undefined) {
        playPromise.catch(() => { /* Fail silently */ });
      }
    }

    if (signalName) {
      const utterance = new SpeechSynthesisUtterance(signalName);
      utterance.lang = 'en-IN'; // Use Indian English if needed
      utterance.rate = 0.95;
      speechSynthesis.speak(utterance);
    }
  }
</script>
